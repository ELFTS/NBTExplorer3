<Window x:Class="NBTExplorer.Wpf.Views.ValueEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Value" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="PromptLabel" Text="Enter value:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="ValueTextBox" Grid.Row="1" VerticalAlignment="Top" Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" Width="75" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" IsCancel="True" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
