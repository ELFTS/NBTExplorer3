<Window x:Class="NBTExplorer.Wpf.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About NBTExplorer" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Image Source="/Resources/logo.png" Width="64" Height="64" Margin="0,0,0,10"/>
            <TextBlock Text="NBTExplorer" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Version 3.0.0 (WPF)" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>
        
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Text="NBTExplorer is an open-source NBT editor for all NBT data sources.&#x0a;&#x0a;Original WinForms version by Justin Aquadro.&#x0a;WPF Migration." HorizontalAlignment="Center" TextAlignment="Center"/>
        
        <Button Grid.Row="2" Content="OK" IsDefault="True" Width="75" HorizontalAlignment="Right" Click="OkButton_Click"/>
    </Grid>
</Window>
