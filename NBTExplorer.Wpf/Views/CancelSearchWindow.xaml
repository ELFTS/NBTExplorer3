<Window x:Class="NBTExplorer.Wpf.Views.CancelSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Searching..." Height="120" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="Searching for nodes..." HorizontalAlignment="Center" Margin="0,0,0,10" />
            <TextBlock x:Name="SearchPathText" Text="" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap" />
            <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" Height="20" />
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="CancelButton" Content="Cancel" Width="75" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>