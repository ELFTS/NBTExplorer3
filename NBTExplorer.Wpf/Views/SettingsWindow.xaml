<Window x:Class="NBTExplorer.Wpf.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <GroupBox Header="General" Grid.Row="0">
            <StackPanel Margin="5">
                <Button Content="Clear Recent Files List" Click="ClearRecentFiles_Click" HorizontalAlignment="Left" Padding="5,2"/>
            </StackPanel>
        </GroupBox>
        
        <Button Grid.Row="2" Content="Close" IsCancel="True" Width="75" HorizontalAlignment="Right" Click="CloseButton_Click"/>
    </Grid>
</Window>
